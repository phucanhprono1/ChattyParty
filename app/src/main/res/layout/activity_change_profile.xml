<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProfile">

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="116dp"
      android:layout_marginEnd="28dp"
      android:layout_marginBottom="125dp"
      app:layout_constraintBottom_toTopOf="@+id/editUsername"
      app:layout_constraintEnd_toStartOf="@+id/choosePic"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.04"
      app:srcCompat="@drawable/placeholder" />

  <Button
      android:id="@+id/choosePic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:text="Choose"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/upload1"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.216" />

  <Button
      android:id="@+id/upload1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="32dp"
      android:text="Upload"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.216" />

  <EditText
      android:id="@+id/editUsername"
      android:layout_width="267dp"
      android:layout_height="54dp"
      android:layout_marginTop="96dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="Name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/choosePic" />

  <Button
      android:id="@+id/buttonSaveChange"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Save Change"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editUsername"
      app:layout_constraintVertical_bias="0.36" />
</androidx.constraintlayout.widget.ConstraintLayout>